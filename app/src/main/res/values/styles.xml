<resources>

    <!-- Base application theme. -->


    <style name="TabView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/spinner_bg</item>
        <item name="colorPrimaryDark">@color/spinner_bg</item>
        <item name="colorAccent">@color/spinner_bg</item>
        <item name="android:actionBarStyle">@style/actionbar_def_style</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="actionbar_def_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 在样式里面直接替换掉actionbar的背景，避免在有的窗口进入慢时导致进入时显示系统默认的actionbar -->
        <item name="android:background">@drawable/actionbar_bottom_bg</item>
        <!-- 在样式里面去掉acionbar的应用图标和标题 -->
        <item name="android:displayOptions">useLogo</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>

    <style name="tweetName">
        <item name="android:textColor">@color/hard_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:shadowColor">#44000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="tweetText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColorLink">#888888</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="tweetDate">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFCCCCCC</item>
    </style>





    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="empty_img">
        <item name="android:layout_width">@dimen/def_height</item>
        <item name="android:layout_height">@dimen/def_height</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>




    <style name="SingleChoose">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="item_textColor">#666666</item>
        <item name="item_backgroundColor">#ffffff</item>
        <item name="item_selectedTextColor">#ffffff</item>
        <item name="item_selectedBackgroundColor">#7289ff</item>
        <item name="item_radius">0dp</item>
        <item name="item_strokeColor">#939393</item>
        <item name="item_selectedStrokeColor">#939393</item>
        <item name="item_strokeWidth">1px</item>
        <item name="item_horizontalSpacing">10dp</item>
        <!--这里设置固定大小,padding为0-->
        <item name="item_horizontalPadding">10dp</item>
        <item name="item_verticalPadding">5dp</item>
        <!--单位dp-->
        <item name="item_width">80</item>
        <item name="item_height">wrap_content</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="item_maxEms">5</item>
        <!--单选-->
        <item name="item_multiChooseable">false</item>
        <item name="item_click">false</item>
    </style>

    <style name="FlowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="item_textColor">#666666</item>
        <item name="item_backgroundColor">#ffffff</item>
        <item name="item_selectedTextColor">#ffffff</item>
        <item name="item_selectedBackgroundColor">#7289ff</item>
        <item name="item_radius">0dp</item>
        <item name="item_strokeColor">#939393</item>
        <item name="item_selectedStrokeColor">#939393</item>
        <item name="item_strokeWidth">1px</item>
        <item name="item_horizontalSpacing">10dp</item>
        <!--这里设置固定大小,padding为0-->
        <item name="item_horizontalPadding">10dp</item>
        <item name="item_verticalPadding">5dp</item>
        <!--单位dp-->
        <item name="item_width">wrap_content</item>
        <item name="item_height">wrap_content</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="item_maxEms">5</item>
        <!--多选-->
        <item name="item_multiChooseable">true</item>
    </style>

    <style name="MultiChoose">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="item_textColor">#666666</item>
        <item name="item_backgroundColor">#ffffff</item>
        <item name="item_selectedTextColor">#ffffff</item>
        <item name="item_selectedBackgroundColor">#7289ff</item>
        <item name="item_radius">0dp</item>
        <item name="item_strokeColor">#939393</item>
        <item name="item_selectedStrokeColor">#939393</item>
        <item name="item_strokeWidth">1px</item>

        <item name="item_verticalSpacing">10dp</item>
        <item name="item_horizontalSpacing">10dp</item>
        <!--这里设置固定大小,padding为0-->
        <item name="item_horizontalPadding">10dp</item>
        <item name="item_verticalPadding">10dp</item>


        <!--单位dp-->
        <item name="item_width">80</item>
        <item name="item_height">wrap_content</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="item_maxEms">5</item>
        <!--多选-->
        <item name="item_multiChooseable">true</item>
    </style>

</resources>
