<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.isanwenyu.tabview.TabGroup
        android:id="@+id/tg_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF">

        <com.isanwenyu.tabview.TabView
            android:id="@+id/tab_news"
            style="@style/TabView"
            app:imgDrawable="@drawable/selector_home"
            app:textColor="@color/tab_home_text_selector"
            app:textSize="@dimen/tab_view_text_size"
            app:rv_framerate="10"
            app:rv_color="#F57058"
            app:rv_rippleDuration="100"
            app:rv_zoom="true"
            app:rv_zoomDuration="300"
            app:rv_zoomScale="1.2"
            app:textShown="true"
            app:textString="神策推荐" />



        <com.isanwenyu.tabview.TabView
            android:id="@+id/tb_av"
            style="@style/TabView"
            app:imgDrawable="@drawable/selector_classify"
            app:rv_centered="false"
            app:rv_color="#E68836"
            app:rv_framerate="10"
            app:rv_rippleDuration="100"
            app:rv_zoom="true"
            app:rv_zoomDuration="300"
            app:rv_zoomScale="1.2"
            app:textColor="@color/tab_classify_text_selector"
            app:textSize="@dimen/tab_view_text_size"
            app:textString="视频" />

        <com.isanwenyu.tabview.TabView
            android:id="@+id/tb_img"
            style="@style/TabView"
            app:imgDrawable="@drawable/selector_friend"
            app:tabRippleEnable="true"
            app:textColor="@color/tab_friend_text_selector"
            app:textSize="@dimen/tab_view_text_size"
            app:rv_framerate="10"
            app:rv_color="#F57058"
            app:rv_rippleDuration="100"
            app:rv_zoom="true"
            app:rv_zoomDuration="300"
            app:rv_zoomScale="1.2"
            app:textString="图片" />

        <com.isanwenyu.tabview.TabView
            android:id="@+id/tb_user"
            style="@style/TabView"
            app:imgDrawable="@drawable/selector_my"
            app:rv_centered="true"
            app:rv_color="#F96C53"
            app:rv_framerate="20"
            app:rv_rippleDuration="100"
            app:rv_zoom="true"
            app:rv_zoomDuration="200"
            app:rv_zoomScale="1.2"
            app:textColor="@color/tab_my_text_selector"
            app:textSize="@dimen/tab_view_text_size"
            app:textString="我" />
    </com.isanwenyu.tabview.TabGroup>
</LinearLayout>
