<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="1dp"
        card_view:contentPadding="2dp"
        card_view:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginRight="3dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_item_1_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#262626"
        android:textSize="18sp"
        android:text="欧洲法院裁定英国可以单方面撤回脱欧请求"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:layout_alignParentTop="true"
     />

    <TextView
        android:id="@+id/tv_item_1_news_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#a9a9a9"
        android:paddingTop="10dp"
        android:layout_margin="2dp"
        android:textSize="16sp"
        android:text="新华社布鲁塞尔12月10日电（记者田栋栋）欧洲法院10日裁定英国可以单方面撤回其递交给欧盟的“脱欧”请求。若撤回，英国仍将作为欧盟成员国享有现有权利。"
       />

    </LinearLayout>

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:scaleType="center"
                android:id="@+id/img_item_1_news"
                android:layout_width="80dp"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
